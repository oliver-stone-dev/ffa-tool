<Window x:Class="ffa_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ffa_tool"
        mc:Ignorable="d"
        Title="Airport Data Updater" Height="520" Width="600" MinHeight="520" MinWidth="600">
    <Window.Resources>
        <Style TargetType="Button" x:Key="SmallButton">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Airport">
                <!--Airport Grid Container-->
                <Grid Background="#FFE5E5E5" ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!-- Find Airport Section Grid -->
                    <Grid Grid.Row="0" Grid.Column="0" ShowGridLines="False" DataContext="{Binding AirportSearchViewModel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" Grid.Column="0" Height="30" Margin="10" FontSize="18" Text="{Binding SearchText,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <!-- Airport Search Button Grid -->
                        <Grid Grid.Row="0" Grid.Column="1" ShowGridLines="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource SmallButton}" Command="{Binding SearchCommand}">Search</Button>
                            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource SmallButton}" Command="{Binding AddCommand}">Add New</Button>
                        </Grid>
                    </Grid>
                    <!-- Airport / Terminal Data Section Grid -->
                    <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="10">Info</TextBlock>
                        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="2" Margin="10">Terminals</TextBlock>

                        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" DataContext="{Binding AirportDataViewModel}">
                            <DataGrid  Margin="10" ItemsSource="{Binding AirportInfo}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}" CanUserReorder="False" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Value" Width="*" Binding="{Binding Value}" CanUserReorder="False"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="2"  Grid.Column="2" Grid.ColumnSpan="2" DataContext="{Binding TerminalDataViewModel}">
                            <DataGrid  Margin="10" ItemsSource="{Binding SelectedTerminalInfo}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}" CanUserReorder="False" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Value" Width="*" Binding="{Binding Value}" CanUserReorder="False"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="1"  Grid.Column="2" DataContext="{Binding TerminalDataViewModel}">
                            <ComboBox  Margin="10" SelectedItem="{Binding SelectedTerminalName}" ItemsSource="{Binding TerminalNames,UpdateSourceTrigger=PropertyChanged}" SelectedIndex="0">
                            </ComboBox>
                        </Grid>
                        <!--Data Section Button Grid -->
                        <Grid Grid.Row="1" Grid.Column="3" ShowGridLines="False" DataContext="{Binding TerminalDataViewModel}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource SmallButton}">Remove</Button>
                            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource SmallButton}">Add</Button>
                        </Grid>
                    </Grid>
                    <!-- Action buttons section grid -->
                    <Grid Grid.Row="2" Grid.Column="0" ShowGridLines="False" DataContext="{Binding ContrButtonsViewModel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource SmallButton}">Delete Airport</Button>
                        <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource SmallButton}">Upload</Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <!--Settings Page Grid -->
                <Grid Background="#FFE5E5E5" ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" />
                            <DataGridTemplateColumn Header="Value" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--Settings Page Button Grid-->
                    <Grid ShowGridLines="False" Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource SmallButton}">Save</Button>
                        <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource SmallButton}">Load</Button>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
