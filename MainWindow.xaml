<Window x:Class="ffa_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ffa_tool"
        mc:Ignorable="d"
        Title="Airport Data Updater" Height="520" Width="600" MinHeight="520" MinWidth="600">
    <Grid>
        <TabControl>
            <TabItem Header="Airport">
                <!--Airport Grid Container-->
                <Grid Background="#FFE5E5E5" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!-- Find Airport Section Grid -->
                    <Grid Grid.Row="0" Grid.Column="0" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" Grid.Column="0" Height="30" Margin="10" FontSize="18" TextChanged="SearchTextChanged" ></TextBox>
                        <!-- Airport Search Button Grid -->
                        <Grid Grid.Row="0" Grid.Column="1" ShowGridLines="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Button Height="30" Grid.Row="0" Grid.Column="0" Margin="10">Search</Button>
                            <Button Height="30" Grid.Row="0" Grid.Column="1" Margin="10">Add New</Button>
                        </Grid>
                    </Grid>
                    <!-- Airport / Terminal Data Section Grid -->
                    <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="10">Info</TextBlock>
                        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="2" Margin="10">Terminals</TextBlock>
                        <DataGrid Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                        </DataGrid>
                        <DataGrid Grid.Row="2"  Grid.Column="2" Grid.ColumnSpan="2" Margin="10">
                        </DataGrid>
                        <ComboBox Grid.Row="1"  Grid.Column="2" Margin="10">
                        </ComboBox>
                        <!--Data Section Button Grid -->
                        <Grid Grid.Row="1" Grid.Column="3" ShowGridLines="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Button Height="30" Grid.Row="0" Grid.Column="0" Margin="10">Remove</Button>
                            <Button Height="30" Grid.Row="0" Grid.Column="1" Margin="10">Add</Button>
                        </Grid>
                    </Grid>
                    <!-- Action buttons section grid -->
                    <Grid Grid.Row="2" Grid.Column="0" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Height="30" Grid.Row="0" Grid.Column="1" Margin="10">Delete Airport</Button>
                        <Button Height="30" Grid.Row="0" Grid.Column="2" Margin="10">Upload</Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <!--Settings Page Grid -->
                <Grid Background="#FFE5E5E5" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                    </DataGrid>
                    <!--Settings Page Button Grid-->
                    <Grid ShowGridLines="True" Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Grid.Column="0" Grid.Row="0" Height="30" Margin="10">Save</Button>
                        <Button Grid.Column="1" Grid.Row="0" Height="30" Margin="10">Load</Button>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
